    //action for the checkbox to set insurance
    private void chkInsuranceItemStateChanged(java.awt.event.ItemEvent evt) {                                              
        //apply insurance fee to booking if checkbox is selected
        if(chkInsurance.isSelected()){
            booking.setInsurance(true);            
        }        
        else if(!chkInsurance.isSelected()){
            booking.setInsurance(false);           
        }
    }                                             

    //action for the Booking button
    //final booking details are set and the object is exported to the Booking table
    //The message is displayed that the booking was added successfuly
    private void btnBookActionPerformed(java.awt.event.ActionEvent evt) {                                        
        try{
            //variable used to convert Quantity combo box to String value            
            String quantity = String.valueOf(cboQuantity.getSelectedItem());
            
            booking.setQuantity(Integer.parseInt(quantity));
            flight.setSeatsTaken(flight.getSeatsTaken() + Integer.parseInt(quantity));
            //update the database with the current flight
            DatabaseOperations.UpdateFlight(flight);
            createQuantityModel();
            
            //calculate booking total if insurance checkbox has been selected
            if(booking.getInsurance() == true){
                booking.setPrice(((booking.getPrice()* Integer.parseInt(quantity)) + (20 * Integer.parseInt(quantity))));                
            }  
            //calculate booking total if insurance checkbox has not been selected
            else if(booking.getInsurance() == false){
                booking.setPrice((booking.getPrice()* Integer.parseInt(quantity)));
            }
            //update the database with the current
            DatabaseOperations.AddBooking(booking);
         
            System.out.println("Booking added");
        }
        catch(Exception e){
            System.out.println(e.toString());
        }
        finally{
            this.dispose();
        }
    }                                       

    //action for closing the form
    private void btnCloseActionPerformed(java.awt.event.ActionEvent evt) {                                         
        this.dispose();     
        
    }                                        


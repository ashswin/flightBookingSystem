    DefaultComboBoxModel quantityModel;

   
    
    /**
     * Creates new form BookingFinalForm
     * sets Flight label to display the flight selected in the Booking form
     * populates the quantity combo box
     */
    public BookingFinalForm(Booking booking) {
        initComponents();  
        this.getContentPane().setBackground(Color.orange);
        lblTitle.setForeground(Color.blue);
        lblFlight.setText(booking.getFlightNumber());        
        flight = DatabaseOperations.getFlightByFLightNumber(booking.getFlightNumber());        
        createQuantityModel();
        this.booking = booking;
    }
    
    //creates the quantity model to populate the combo box
    //person cannot book more than 12 tickets at a time
    //check is performed to see how many tickets are available for booking
    public void createQuantityModel(){
        quantityModel = new DefaultComboBoxModel();                
        for(Plane plane: Plane.values()){
            if(flight.getPlane().equals(plane.name())){
                seatsAvailable = plane.getPassengerCapacity() - flight.getSeatsTaken();
                if(seatsAvailable < 12){
                    maxQuantity = seatsAvailable;
                    for(int i = 1; i <= maxQuantity; i++){
                        quantityModel.addElement(i);
                    }
                }
                else{
                    for(int i = 1; i <= 12; i++){
                        quantityModel.addElement(i);
                    }
                    //cboQuantity.setModel(quantityModel);
                }
            }
            
        }
        cboQuantity.setModel(quantityModel);
    }

